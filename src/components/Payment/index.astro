---
import { Image } from 'astro:assets';

const steps = [
  {
    id: 1,
    text: "Nequi: 321 000 0000"
  },
  {
    id: 2,
    text: "Davivienda 321 000 0000"
  },
  {
    id: 3,
    text: "Wompi 321 000 0000"
  },
  {
    id: 4,
    text: "NU: 321 000 0000"
  }
];
---

<div class="min-h-screen/50 flex items-center justify-center bg-white p-6">
  <div class="max-w-4xl w-full rounded-2xl overflow-hidden shadow-lg bg-white flex flex-col md:flex-row">
    <div class="p-8 md:p-10 flex-1 flex flex-col items-center justify-center bg-gray-50 border-r border-gray-100">
      <div class="flex gap-2 mb-6 self-start">
        <button class="rounded-full border border-gray-200 px-4 py-2 flex items-center gap-2 bg-black text-white hover:bg-black/90">
          <span>CÃ³digo QR para la lluvia de transacciones</span>
        </button>
      </div>
      
      <div class="w-full max-w-[280px] h-[280px] bg-white p-4 shadow-sm rounded-md mb-6">
        <Image 
          src="https://upload.wikimedia.org/wikipedia/commons/d/d7/Commons_QR_code.png" 
          alt="QR Bancolombia" 
          width={280}
          height={280}
          class="w-full h-full object-contain"
        />
      </div>
    </div>
    
    <div class="p-8 md:p-10 flex-1 flex flex-col">
      <h1 class="text-2xl md:text-3xl font-medium mb-8 text-gray-900">
        Bancolombia
      </h1>
      
      <ul class="space-y-5 mb-8">
        {steps.map((step) => (
          <li class="flex items-start gap-3">
            <div class="w-5 h-5 rounded-full bg-gray-100 border border-gray-200 flex items-center justify-center text-xs mt-1">
              <div class="w-2 h-2 rounded-full bg-gray-500"></div>
            </div>
            <p class="text-gray-600">{step.text}</p>
          </li>
        ))}
      </ul>
      
      <p class="text-gray-500 text-sm mt-auto">
        Mandanos un comprobante
      </p>
    </div>
  </div>
</div>
